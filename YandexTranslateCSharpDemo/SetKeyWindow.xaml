<Window x:Class="YandexTranslateCSharpDemo.SetKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YandexTranslateCSharpDemo"
        mc:Ignorable="d"
        Title="Set Key" Height="100" Width="300" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBox  Margin="10" Name="keyTextBox"></TextBox>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="okButton" Width="75" Click="okButton_Click">OK</Button>
            <Button Name="cancelButton" Width="75" Margin="10,0,0,0" Click="cancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
